<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="16dp"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/article_image"
        android:src="@drawable/dpkotlin"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_toRightOf="@+id/article_image"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:id="@+id/article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="What is new in Kotlin 1.2.20"/>
    <TextView
        android:layout_toRightOf="@+id/article_image"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="4"
        android:layout_below="@+id/article_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/article_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="What is new in Kotlin 1.2.20 What is new in Kotlin 1.2.20What is new in Kotlin 1.2.20"/>

    <TextView
        android:layout_toRightOf="@+id/article_image"
        android:textSize="8sp"
        android:layout_below="@+id/article_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/article_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Author: Nsikak Thompson"/>

</RelativeLayout>